#include <iostream>
#include <stdio.h>
#include <conio.h>


using namespace std;

struct agenda 
{
	string nombre ;
    int edad;
	string categoria;

};

void main ()

{
	FILE *ptr;
	agenda reg;
	int i=0;
	ptr=fopen("agenda.dat","r+b");
	if(ptr!=NULL)
	{
	  fread(&reg,sizeof(reg),1,ptr);
	  i++;
	  while(!feof(ptr))
	  {
	    if((reg.edad>0)&&(reg.edad<=12))
		{
			reg.categoria="NIÃ‘EZ";
		}
        if((reg.edad>12)&&(reg.edad<=21))
		{
		  reg.categoria="JUVENTUD";
		}

		if((reg.edad>21)&&(reg.edad<=70))
		{
		 
			reg.categoria="ADULTEZ";
		
		}
		if(reg.edad>70)
		{
			reg.categoria="ANCIANIDAD";
		}
	  
	  }

	  fseek(ptr,(sizeof reg )*(i-1),SEEK_SET);
	  fwrite(&reg,sizeof(reg),1,ptr);
	  fread(&reg,sizeof(reg),1,ptr);
	  i++;
	  fclose(ptr);
	}
	getch();
}

