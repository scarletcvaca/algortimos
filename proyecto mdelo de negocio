struct usuario
{
	string nombre;
	string empresa;
	string contrasena;
	string estado;
};
struct producto
{
	int codigo;
	string descripcion;
	float costo;
	float precio;
	string un;
	string estado;
};
struct almacen
{
	int codigo;
	string estado;
};
struct un
{
	int codigo;
	string descripcion;
	string estado;
};
struct venta
{
	int id;
	int codigoproducto;
	int codigoalmacen;
	string un;
	float ventaacumulada;
	string estado;
	int fechaanho;
	int cantidad;
};

producto ObtCodigoProducto(int n)
{
	FILE *ptr;
	producto regP;
	ptr = fopen("producto.dat", "rb");
	if (ptr != NULL)
	{
		fread(&regP, sizeof(regP), 1, ptr);
		while ((!feof(ptr) == false) && (regP.codigo != n))
		{
			fread(&regP, sizeof(ptr), 1, ptr);
		}
		fclose(ptr);
		return(regP);
	}
}
almacen ObtCodigoAlmacen(int n)
{
	FILE *ptr;
	almacen regA;
	ptr = fopen("almacen.dat", "rb");
	if (ptr != NULL)
	{
		fread(&regA, sizeof(regA), 1, ptr);
		while ((!feof(ptr) == false) && (regA.codigo != n))
		{
			fread(&regA, sizeof(ptr), 1, ptr);
		}
		fclose(ptr);
		return(regA);
	}
}
un ObtUnidadDeNegocio(string n)
{
	FILE *ptr;
	un regU;
	ptr = fopen("unidaddenegocio.dat", "rb");
	if (ptr != NULL)
	{
		fread(&regU, sizeof(regU), 1, ptr);
		while ((!feof(ptr) == false) && ( regU.descripcion!=n ))
		{
			fread(&regU, sizeof(ptr), 1, ptr);
		}
		fclose(ptr);
		return(regU);
	}
}
//verificar codigos
bool verificarCodigoProducto(int x)
{
	bool ban = false;
	FILE *ptr;
	producto reg;
	ptr = fopen("producto.dat", "rb");
	if (ptr == NULL)
	{
		cout << "Archivo no Existe";
	}
	else{
		fread(&reg, sizeof(reg), 1, ptr);
		while (!feof(ptr))
		{
			if (reg.codigo == x)
			{
				ban = true;
			}
			fread(&reg, sizeof(reg), 1, ptr);
		}
		fclose(ptr);
	}
	return(ban);
}
