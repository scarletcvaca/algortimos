		cout << "\nIngrese el costo: ";
		cin >> reg.costo;
		cout << "\nIngrese el precio: ";
		cin >> reg.precio;
		cout << "\nIngrese unidad de negocio: ";
		fflush(stdin);
		cin.clear();
		getline(cin,reg.un);
		reg.estado = "S";
		fwrite(&reg, sizeof(reg), 1, ptr);
		fclose(ptr);
	
	cout << "\nDesea volver atras?? si = 1 ---  Salir = 0\n";
	cin>>op;
	if (op == 1)
		submenuSistemasProducto();
	else
	system("pause");
	
}
